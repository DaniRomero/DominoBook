<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keyWidth="50%p"
    android:horizontalGap="1px"
    android:verticalGap="1px"
    android:keyHeight="40dip">

    <Row>
        <Key android:codes="1" android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:codes="2" android:keyLabel="2" />
        <Key android:codes="3" android:keyLabel="3" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="4" android:keyLabel="4" android:keyEdgeFlags="left"/>
        <Key android:codes="5" android:keyLabel="5" />
        <Key android:codes="6" android:keyLabel="6" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="7" android:keyLabel="7" android:keyEdgeFlags="left"/>
        <Key android:codes="8" android:keyLabel="8" />
        <Key android:codes="9" android:keyLabel="9" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="-1" android:keyIcon="@drawable/ic_backspace_black_24dp" android:keyEdgeFlags="left"/>
        <Key android:codes="0" android:keyLabel="0" />
        <Key android:codes="100" android:keyLabel="Enter" android:keyEdgeFlags="right"/>
    </Row>


</Keyboard>