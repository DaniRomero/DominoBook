<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_winners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_winner_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winner team:"/>

        <TextView
            android:id="@+id/tv_winners_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_winner_label"
            android:layout_marginLeft="10dp"
            android:text=""/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_loosers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/ll_winners">

        <TextView
            android:id="@+id/tv_looser_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Looser team:"/>

        <TextView
            android:id="@+id/tv_loosers_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_looser_label"
            android:layout_marginLeft="10dp"
            android:text=""/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_winners_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/ll_loosers">

        <TextView
            android:id="@+id/tv_winners_scores_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Winners scores:"/>

        <TextView
            android:id="@+id/tv_winners_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_winners_scores_label"
            android:layout_marginLeft="10dp"
            android:text=""/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_loosers_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/ll_winners_scores">

        <TextView
            android:id="@+id/tv_loosers_scores_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Loosers scores:"/>

        <TextView
            android:id="@+id/tv_loosers_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_loosers_scores_label"
            android:layout_marginLeft="10dp"
            android:text=""/>

    </RelativeLayout>


</RelativeLayout>